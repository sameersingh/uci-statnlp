{
  "random_seed": 42,
  "train_dataset": {
    "data_path": "data/twitter_train.pos",
    "max_length": 30
  },
  "validation_dataset": {
    "data_path": "data/twitter_dev.pos",
    "max_length": 30
  },
  "model": {
    "type": "neural_crf.NeuralCrf",
    "num_tags": 13,
    "embeddings": {
      "embedding_dim": 50,
      "embedding_path": "glove.6b.50d.txt"
    },
    "encoder": {
      "type": "torch.nn.LSTM",
      "input_size": 50,
      "hidden_size": 25,
      "num_layers": 1,
      "dropout": 0.1,
      "bidirectional": true
    },
    "tag_projection": {
      "type": "torch.nn.Linear",
      "in_features": 50,
      "out_features": 13
    }
  },
  "training": {
    "batch_size": 32,
    "num_epochs": 40,
    "optimizer": {
      "type": "torch.optim.Adam"
    }
  }
}